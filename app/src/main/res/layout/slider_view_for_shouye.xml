<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="15.5dp"
        android:layout_marginTop="13.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MOST CLUB派对酒吧 周末PARTY"
        android:textColor="#ff0e0e0e"
        android:textSize="14sp"
        />

    <ImageView
        android:id="@+id/time_icon"
        app:layout_constraintLeft_toLeftOf="@id/title_text"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        android:layout_marginTop="9.5dp"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/icon_head"
        />

    <TextView
        android:id="@+id/time_text"
        app:layout_constraintTop_toTopOf="@id/time_icon"
        app:layout_constraintLeft_toRightOf="@id/time_icon"
        app:layout_constraintBottom_toBottomOf="@id/time_icon"
        android:layout_marginLeft="15.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020-8-16  20:00--22:00 "
        android:textColor="#ff343434"
        android:textSize="11sp"
        />

    <ImageView
        android:id="@+id/address_icon"
        app:layout_constraintLeft_toLeftOf="@id/time_icon"
        app:layout_constraintTop_toBottomOf="@id/time_icon"
        android:layout_marginTop="9.5dp"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/icon_head"
        />

    <TextView
        android:id="@+id/address_text"
        app:layout_constraintLeft_toRightOf="@id/address_icon"
        app:layout_constraintTop_toTopOf="@id/address_icon"
        app:layout_constraintBottom_toBottomOf="@id/address_icon"
        android:layout_marginLeft="15.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="长宁区 天山路448号5F502"
        android:textColor="#ff343434"
        android:textSize="11sp"
        />

    <ImageView
        android:id="@+id/price_icon"
        app:layout_constraintLeft_toLeftOf="@id/address_icon"
        app:layout_constraintTop_toBottomOf="@id/address_icon"
        android:layout_marginTop="9.5dp"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/icon_head"
        />

    <TextView
        android:id="@+id/price_text"
        app:layout_constraintLeft_toRightOf="@id/price_icon"
        app:layout_constraintTop_toTopOf="@id/price_icon"
        android:layout_marginLeft="15.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2000彩虹币"
        android:textColor="#ff333333"
        android:textSize="11sp"
        />

    <TextView
        android:id="@+id/people_num"
        app:layout_constraintLeft_toRightOf="@id/price_text"
        app:layout_constraintTop_toTopOf="@id/price_text"
        android:layout_marginLeft="15.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="限10人"
        android:textColor="#ff333333"
        android:textSize="11sp"
        />

    <FrameLayout
        android:id="@+id/canjia_icon"
        app:layout_constraintLeft_toLeftOf="@id/price_icon"
        app:layout_constraintTop_toBottomOf="@id/price_icon"
        android:layout_marginTop="8.5dp"
        android:layout_width="100dp"
        android:layout_height="27dp">

        <ImageView
            android:id="@+id/canjia_img6"
            android:layout_marginLeft="67.5dp"
            android:src="@drawable/face"
            android:layout_width="27dp"
            android:layout_height="27dp"/>

        <ImageView
            android:id="@+id/canjia_img5"
            android:layout_marginLeft="54dp"
            android:src="@drawable/face"
            android:layout_width="27dp"
            android:layout_height="27dp"/>

        <ImageView
            android:id="@+id/canjia_img4"
            android:layout_marginLeft="40.5dp"
            android:src="@drawable/face"
            android:layout_width="27dp"
            android:layout_height="27dp"/>

        <ImageView
            android:id="@+id/canjia_img3"
            android:layout_marginLeft="27dp"
            android:src="@drawable/face"
            android:layout_width="27dp"
            android:layout_height="27dp"/>

        <ImageView
            android:id="@+id/canjia_img2"
            android:layout_marginLeft="13.5dp"
            android:src="@drawable/face"
            android:layout_width="27dp"
            android:layout_height="27dp"/>

        <ImageView
            android:id="@+id/canjia_img1"
            android:src="@drawable/face"
            android:layout_width="27dp"
            android:layout_height="27dp"/>

    </FrameLayout>

    <TextView
        android:id="@+id/canjia_text"
        app:layout_constraintLeft_toRightOf="@id/canjia_icon"
        app:layout_constraintTop_toTopOf="@id/canjia_icon"
        app:layout_constraintBottom_toBottomOf="@id/canjia_icon"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已有6人参加"
        android:textColor="#ff333333"
        android:textSize="11sp"
        />

    <TextView
        android:id="@+id/tips_text"
        app:layout_constraintLeft_toLeftOf="@id/canjia_icon"
        app:layout_constraintTop_toBottomOf="@id/canjia_icon"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="截至报名时间：2020-8-16-18:00    235人查看"
        android:textColor="#ff999999"
        android:textSize="9sp"
        />

    <ImageView
        android:id="@+id/face_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="11.5dp"
        android:layout_marginRight="25dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_head"
        />

    <TextView
        android:id="@+id/name_text"
        app:layout_constraintTop_toBottomOf="@id/face_icon"
        app:layout_constraintLeft_toLeftOf="@id/face_icon"
        app:layout_constraintRight_toRightOf="@id/face_icon"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暖阳阳"
        android:textColor="#ff666666"
        android:textSize="11sp"
        />

    <ImageView
        android:id="@+id/tel_icon"
        app:layout_constraintTop_toBottomOf="@id/name_text"
        app:layout_constraintLeft_toLeftOf="@id/name_text"
        app:layout_constraintRight_toRightOf="@id/name_text"
        android:layout_marginTop="8dp"
        android:layout_width="27.5dp"
        android:layout_height="27.5dp"
        android:background="@drawable/oval_circle_4"
        />

    <TextView
        android:id="@+id/baoming_btn"
        app:layout_constraintTop_toBottomOf="@id/tel_icon"
        app:layout_constraintLeft_toLeftOf="@id/tel_icon"
        app:layout_constraintRight_toRightOf="@id/tel_icon"
        android:layout_marginTop="21dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我要报名"
        android:textColor="#ffffffff"
        android:textSize="13sp"
        android:padding="7.5dp"
        android:background="@drawable/pink_round_corner"
        />

</android.support.constraint.ConstraintLayout>