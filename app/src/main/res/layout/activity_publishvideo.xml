<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#030303"
                android:textSize="16sp"
                android:text="作品简介"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/jianjie"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:textSize="13sp"
                    android:textColor="@color/textBlack"
                    android:hint="请输入作品简介"
                    android:textColorHint="@color/hint_color"
                    android:gravity="top"
                    android:padding="5dp"
                    android:background="@drawable/grey_biankuang2"/>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#030303"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:text="展位号"/>

            <EditText
                android:id="@+id/zhanweihao"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="33dp"
                android:hint="请输入展位号"
                android:textSize="13sp"
                android:textColorHint="@color/hint_color"
                android:textColor="@color/black"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/grey_biankuang2"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#030303"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:text="需求行业标签"/>


        <com.nex3z.flowlayout.FlowLayout
            android:id="@+id/hangye_fl_xianshi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flFlow="true"
            android:layout_marginTop="10dp"
            app:flRowSpacing="10dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/add_hangye"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:text="+添加标签"
                android:textSize="13sp"
                android:gravity="center"
                android:background="@drawable/grey_biankuang3"
                android:textColor="@color/hint_color"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#030303"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:text="产品标签"/>


        <com.nex3z.flowlayout.FlowLayout
            android:id="@+id/chanping_fl_xianshi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flFlow="true"
            android:layout_marginTop="10dp"
            app:flRowSpacing="10dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/add_chanping"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:text="+添加标签"
            android:textSize="13sp"
            android:gravity="center"
            android:background="@drawable/grey_biankuang3"
            android:textColor="@color/hint_color"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#030303"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:text="是否关联商品"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/guanlianshangping"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:textColor="@color/hint_color"
                    android:textSize="13sp"
                    android:background="@drawable/grey_biankuang3"
                    android:gravity="center"
                    android:text="关联商品"/>
                <TextView
                    android:id="@+id/buguanlianshangping"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:textColor="@color/p_red"
                    android:textSize="13sp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/pink_biankuang"
                    android:gravity="center"
                    android:text="不关联商品"/>


            </LinearLayout>

        <LinearLayout
            android:id="@+id/guanlianL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#030303"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:text="商品地址"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/zhanneishangping"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:textColor="@color/p_red"
                    android:textSize="13sp"
                    android:background="@drawable/pink_biankuang"
                    android:gravity="center"
                    android:text="站内商品"/>
                <TextView
                    android:id="@+id/zhanwaishangping"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:textColor="@color/hint_color"
                    android:textSize="13sp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/grey_biankuang3"
                    android:gravity="center"
                    android:text="站外商品"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/xianshigouwuche"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:textColor="@color/p_red"
                    android:textSize="13sp"
                    android:background="@drawable/pink_biankuang"
                    android:gravity="center"
                    android:text="显示购物车"/>
                <TextView
                    android:id="@+id/xianshishangpingtu"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:textColor="@color/hint_color"
                    android:textSize="13sp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/grey_biankuang3"
                    android:gravity="center"
                    android:text="显示商品图片"/>

            </LinearLayout>


            <TextView
                android:id="@+id/zhanneishangpingId"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="33dp"
                android:hint="去我的店铺选择"
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:textColorHint="@color/hint_color"
                android:textColor="@color/black"
                android:paddingLeft="5dp"
                android:paddingRight="15dp"
                android:drawableRight="@mipmap/right_grey_arr"
                android:background="@drawable/grey_biankuang2"/>
            <EditText
                android:id="@+id/shangpinglianjie"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="33dp"
                android:hint="请输入商品链接"
                android:textSize="13sp"
                android:singleLine="true"
                android:visibility="gone"
                android:textColorHint="@color/hint_color"
                android:textColor="@color/black"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/grey_biankuang2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#030303"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:text="商品名称"/>

            <EditText
                android:id="@+id/shangpingming"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="33dp"
                android:hint="请输入商品名称"
                android:textSize="13sp"
                android:singleLine="true"
                android:textColorHint="@color/hint_color"
                android:textColor="@color/black"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/grey_biankuang2"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#030303"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:text="商品价格"/>

            <EditText
                android:id="@+id/jiage"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="33dp"
                android:hint="请输入商品价格"
                android:textSize="13sp"
                android:inputType="number"
                android:singleLine="true"
                android:textColorHint="@color/hint_color"
                android:textColor="@color/black"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/grey_biankuang2"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>