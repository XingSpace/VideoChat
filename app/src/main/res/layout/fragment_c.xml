<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/xiaoxiTop"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息"
            android:textSize="17sp"
            android:textColor="#191B1F"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dianzanT"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="点赞"
                android:textSize="13sp"
                android:textColor="#1B202B"
                android:drawableTop="@mipmap/dianzan_ic"
                android:gravity="center"
                android:drawablePadding="3dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/pinglunT"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="评论"
                android:drawableTop="@mipmap/pinglun_ic"
                android:textSize="13sp"
                android:drawablePadding="3dp"
                android:textColor="#1B202B"
                android:gravity="center"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/guanzhuT"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="关注"
                android:textSize="13sp"
                android:drawableTop="@mipmap/guanzhu_ic"
                android:drawablePadding="3dp"
                android:textColor="#1B202B"
                android:gravity="center"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/haoyouT"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="好友"
                android:drawableTop="@mipmap/haoyou_ic"
                android:textSize="13sp"
                android:drawablePadding="3dp"
                android:textColor="#1B202B"
                android:gravity="center"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/line_huise"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"/>


    </LinearLayout>


    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>