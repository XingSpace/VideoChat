<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/grey_bg"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/contentPanel"
        android:layout_width="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/fl_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="#1f2531">

        <Button
            android:id="@+id/btn_home_select"
            android:layout_width="58dp"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            android:background="@drawable/tab_home_select" />

        <Button
            android:id="@+id/btn_home_left"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="67dp"
            android:layout_toLeftOf="@id/btn_home_select"
            android:background="@drawable/ic_home_video_selected" />

        <Button
            android:id="@+id/btn_home_right"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="67dp"
            android:layout_toRightOf="@id/btn_home_select"
            android:background="@drawable/ic_user_normal" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#B3B3B3">

        <LinearLayout
            android:id="@+id/shouyeL"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shouyeT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"/>

            <View
                android:id="@+id/shouyeV"
                android:layout_width="25dp"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/white_line"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/youquanL"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/youquanT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="友圈"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"/>

            <View
                android:id="@+id/youquanV"
                android:layout_width="25dp"
                android:layout_height="2dp"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/white_line"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/paisheL"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/xiangji_pic"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"/>

            <View
                android:layout_width="25dp"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/xiaoxiL"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/xiaoxiT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消息"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"/>

            <View
                android:id="@+id/xiaoxiV"
                android:layout_width="25dp"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/white_line"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/woL"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/woT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"/>

            <View
                android:id="@+id/woV"
                android:layout_width="25dp"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/white_line"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
