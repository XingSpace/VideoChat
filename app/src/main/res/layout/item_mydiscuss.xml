<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/discussHead"
            android:layout_width="40dp"
            android:layout_height="40dp"
            style="@style/imageView_circle"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="13sp"
                    android:text="用户名"
                    android:textColor="@color/black2"/>
                <TextView
                    android:id="@+id/tvHy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="9sp"
                    android:visibility="gone"
                    android:background="@drawable/haoyou_bg"
                    android:layout_marginLeft="10dp"
                    android:text="好友"
                    android:paddingBottom="1dp"
                    android:paddingTop="1dp"
                    android:paddingRight="3dp"
                    android:paddingLeft="3dp"
                    android:textColor="#FE002E"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:textSize="14sp"
                android:text="你就是我的菜～～～非常喜欢这个视 频很不错！"
                android:layout_marginTop="6dp"
                android:textColor="@color/black2"/>

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:textSize="12sp"
                android:text="评论了你的作品   10分钟前"
                android:textColor="#801C202C"/>

        </LinearLayout>


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img"
            android:layout_width="58dp"
            android:layout_height="65dp"
            style="@style/imageView_corner2"/>

    </LinearLayout>


</LinearLayout>