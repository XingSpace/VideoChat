<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey_bg"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/content"
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#B3B3B3">

        <LinearLayout
            android:id="@+id/shouyeL"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shouyeT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"/>

            <View
                android:id="@+id/shouyeV"
                android:layout_width="25dp"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/white_line"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/shequL"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shequT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="社区"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"/>

            <View
                android:id="@+id/shequV"
                android:layout_width="25dp"
                android:layout_height="2dp"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/white_line"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/paisheL"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/xiangji_pic"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"/>

            <View
                android:layout_width="25dp"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/liaotianL"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/liaotianT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="聊天"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"/>

            <View
                android:id="@+id/liaotianV"
                android:layout_width="25dp"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/white_line"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/woL"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/woT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"/>

            <View
                android:id="@+id/woV"
                android:layout_width="25dp"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/white_line"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
