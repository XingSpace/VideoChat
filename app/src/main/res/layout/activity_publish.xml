<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey_bg"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:background="@color/white">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/jianjie"
                    android:hint="请输入作品简介"
                    android:textColorHint="@color/hint_color"
                    android:textSize="13sp"
                    android:gravity="top"
                    android:padding="15dp"
                    android:maxLength="100"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/grey_biankuang2"/>

            </LinearLayout>
            <com.jude.easyrecyclerview.EasyRecyclerView
                android:id="@+id/gview_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:minHeight="100dp"
                android:layout_marginTop="10dp"
                app:layout_empty="@layout/easy_recycle_view_empty"
                app:layout_progress="@layout/easy_recycle_view_progress"
                app:scrollbarStyle="insideOverlay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#050505"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:text="展位号"/>

            <EditText
                android:id="@+id/zhanweihao"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="33dp"
                android:hint="请输入展位号"
                android:textSize="13sp"
                android:textColorHint="@color/hint_color"
                android:textColor="@color/black"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/grey_biankuang2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#030303"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:text="需求行业标签"/>


            <com.nex3z.flowlayout.FlowLayout
                android:id="@+id/hangye_fl_xianshi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flFlow="true"
                android:layout_marginTop="10dp"
                app:flRowSpacing="10dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/add_hangye"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text="+添加标签"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:background="@drawable/grey_biankuang3"
                    android:textColor="@color/hint_color"/>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#030303"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:text="产品标签"/>


            <com.nex3z.flowlayout.FlowLayout
                android:id="@+id/chanping_fl_xianshi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flFlow="true"
                android:layout_marginTop="10dp"
                app:flRowSpacing="10dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/add_chanping"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text="+添加标签"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:background="@drawable/grey_biankuang3"
                    android:textColor="@color/hint_color"/>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</ScrollView>