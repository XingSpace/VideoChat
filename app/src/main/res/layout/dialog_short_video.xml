<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_corner_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="20dp"
            android:src="@mipmap/cancel_white_ic" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创作"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="80dp"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/tv_editer"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="导入"
                    android:textSize="13sp"
                    android:drawableTop="@mipmap/daoru_ic"
                    android:drawablePadding="10dp"
                    android:textColor="@color/chuangzuogrey"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/tv_record"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="拍摄"
                    android:textSize="13sp"
                    android:drawableTop="@mipmap/paishe_ic"
                    android:drawablePadding="10dp"
                    android:textColor="@color/chuangzuogrey"/>

            </RelativeLayout>
            <TextView
                android:id="@+id/dongtai"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="动态"
                android:textSize="13sp"
                android:drawableTop="@mipmap/dongtai_ic"
                android:drawablePadding="10dp"
                android:textColor="@color/chuangzuogrey"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:id="@+id/tv_record_img"
                    android:layout_width="@dimen/tv_short_dialog_width"
                    android:layout_height="@dimen/tv_short_dialog_height"
                    android:src="@drawable/drawable_ugc_record"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/video_record_title"
                    android:layout_below="@+id/tv_record_img"
                    android:textColor="@color/white"
                    android:paddingTop="8dp"
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:textSize="14dp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_chorus"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:id="@+id/tv_followrecord_img"
                    android:layout_width="@dimen/tv_short_dialog_width"
                    android:layout_height="@dimen/tv_short_dialog_height"
                    android:src="@drawable/drawable_ugc_followrecord"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:layout_below="@+id/tv_followrecord_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:drawablePadding="8dp"
                    android:text="@string/chorus_title"
                    android:textColor="@color/white"
                    android:textSize="14dp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_triple_chorus"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:id="@+id/tv_triple_img"
                    android:layout_width="@dimen/tv_short_dialog_width"
                    android:layout_height="@dimen/tv_short_dialog_height"
                    android:src="@drawable/triplescreen"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:layout_below="@+id/tv_triple_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:text="@string/ugckit_triple_title"
                    android:textColor="@color/white"
                    android:textSize="14dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:id="@+id/tv_editer_img"
                    android:layout_width="@dimen/tv_short_dialog_width"
                    android:layout_height="@dimen/tv_short_dialog_height"
                    android:src="@drawable/drawable_ugc_editer"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:layout_below="@+id/tv_editer_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:text="@string/video_editer_title"
                    android:textColor="@color/white"
                    android:textSize="14dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_picture"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:id="@+id/tv_picture_img"
                    android:layout_width="@dimen/tv_short_dialog_width"
                    android:layout_height="@dimen/tv_short_dialog_height"
                    android:src="@drawable/drawable_ugc_pic"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:layout_below="@+id/tv_picture_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:text="@string/picture_editer_title"
                    android:textColor="@color/white"
                    android:textSize="14dp" />
            </RelativeLayout>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>